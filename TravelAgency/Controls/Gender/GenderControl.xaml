<UserControl x:Class="TravelAgency.GenderControl"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgency"
             xmlns:core="clr-namespace:TravelAgency.Core;assembly=TravelAgency.Core"
             mc:Ignorable="d">
    
    <Grid MinWidth="220"
          MinHeight="20">
        <StackPanel x:Name="radioButtonPanel" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            
            <RadioButton x:Name="maleRadioButton" 
                         Margin="0 0 70 0"
                         Content="Male" 
                         FontSize="{StaticResource FontSizeMediumSmall}"/>

            <RadioButton x:Name="femaleRadioButton" 
                         Content="Female"
                         FontSize="{StaticResource FontSizeMediumSmall}"/>
        </StackPanel>
    </Grid>
</UserControl>
